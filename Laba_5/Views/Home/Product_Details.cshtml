@model Laba_5.Models.Product
@{
    ViewBag.Title = Model.Name;
}
<h2>Сведения о товаре: @Model.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.Id</dd>
 
        <dt>Цена</dt>
        <dd>@Model.Price</dd>

        <dt>Описание товара</dt>
        <dd>@Model.Description</dd>
    </dl>
</div>